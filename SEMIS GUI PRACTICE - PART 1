import javax.swing.*;
import java.awt.*;
import java.awt.event.*;


public class Calculator extends JFrame{
   private JTextField lengthField;
   private JTextField widthField;
   private JLabel resultLabel;
   
   // Constructor
   public Calculator(){
      // Frames and Panels
      JPanel panel = new JPanel();
      JLabel lengthLabel = new JLabel("Enter Length:");
      JLabel widthLabel = new JLabel("Enter Width:");
      lengthField = new JTextField(15);
      widthField = new JTextField(15);
      JButton calculateButton = new JButton("Calculate");
      resultLabel = new JLabel();

      // Frame Properties
      this.setTitle("Triangle");
      this.add(panel);
      this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
      this.setSize(230, 230);
      this.setResizable(true);
      this.setLocationRelativeTo(null); 
      this.setVisible(true);
      ImageIcon image = new ImageIcon("LOGO.png");
      this.setIconImage(image.getImage());
      
      // Panel properties
      panel.setBackground(new Color(0x424242));
      lengthLabel.setForeground(Color.WHITE);
      widthLabel.setForeground(Color.WHITE);
      lengthField.setBackground(Color.WHITE);
      widthField.setBackground(Color.WHITE);
      calculateButton.setBackground(Color.WHITE);
      calculateButton.setForeground(Color.BLACK);
      resultLabel.setForeground(Color.WHITE);
     
      // Size for the text fields
      lengthField.setPreferredSize(new Dimension(150, 30));
      widthField.setPreferredSize(new Dimension(150, 30));

      calculateButton.addActionListener(new ActionListener() {
         public void actionPerformed(ActionEvent e) {
            double length = Double.parseDouble(lengthField.getText());
            double width = Double.parseDouble(widthField.getText());
            double area = length * width;
            double perimeter = 2 * (length + width);
            String formattedArea = String.valueOf(area);
            String formattedPerimeter = String.valueOf(perimeter);
            resultLabel.setText("Area: " + formattedArea + " Perimeter: " + formattedPerimeter);
                
         }
      });

        panel.add(lengthLabel);
        panel.add(lengthField);
        panel.add(widthLabel);
        panel.add(widthField);
        panel.add(calculateButton);
        panel.add(resultLabel);
        
   }
   
   
}
