import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

class TriangleGUI {
    private JTextField lengthField;
    private JTextField widthField; // Changed from heightField to widthField
    private JLabel resultLabel;

    public TriangleGUI() {
        JFrame frame = new JFrame("Triangle Calculator");
        JPanel panel = new JPanel();
        JLabel lengthLabel = new JLabel("Enter Length:");
        JLabel widthLabel = new JLabel("Enter Width:"); // Changed from "Enter Height" to "Enter Width"
        lengthField = new JTextField(15);
        widthField = new JTextField(15); // Changed from heightField to widthField
        JButton calculateButton = new JButton("Calculate");
        resultLabel = new JLabel();

        // Set background color to black and text color to white
        panel.setBackground(Color.BLACK);
        lengthLabel.setForeground(Color.WHITE);
        widthLabel.setForeground(Color.WHITE);
        lengthField.setBackground(Color.WHITE);
        widthField.setBackground(Color.WHITE);
        calculateButton.setBackground(Color.WHITE);
        calculateButton.setForeground(Color.BLACK); // Change button text color to black
        resultLabel.setForeground(Color.WHITE);

        calculateButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                double length = Double.parseDouble(lengthField.getText());
                double width = Double.parseDouble(widthField.getText()); // Changed from height to width
                double area = 0.5 * length * width; // Changed from height to width
                double perimeter = length + 2 * (Math.sqrt(Math.pow(width / 2, 2) + Math.pow(length, 2))); // Changed from height to width
                resultLabel.setText("Area: " + area + " Perimeter: " + perimeter);
            }
        });

        panel.add(lengthLabel);
        panel.add(lengthField);
        panel.add(widthLabel); // Changed from heightLabel to widthLabel
        panel.add(widthField); // Changed from heightField to widthField
        panel.add(calculateButton);
        panel.add(resultLabel);

        frame.add(panel);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(300, 200); // Set initial frame size
        frame.setVisible(true);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(new Runnable() {
            @Override
            public void run() {
                new TriangleGUI();
            }
        });
    }
}
