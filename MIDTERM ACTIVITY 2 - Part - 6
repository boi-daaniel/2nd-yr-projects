// Sphere class inheriting Circle class and implements ThreeD interface
class Sphere extends Circle implements ThreeD {
            
   // Default constructor and parameterized constructor
   public Sphere() {
      super();
   }

   public Sphere(double radius) {
      super(radius);
   }

   // Getters and Setters
   public void setRadius(double radius) {
      super.setRadius(radius);
   }


   public double getRadius() {
      return super.getRadius();
   }
    
   // Override methods that calculates the Area using the formula of sphere which is 4 times pi times the radius and displays the Sphere radius
   public double getArea() {
      return 4 * Math.PI * super.getRadius() * super.getRadius();
   }

   public double getVolume() {
      return super.getArea() * getRadius();
   }

   public String toString() {
      return "The Sphere's radius is " + getRadius();
   }

   // Checks if the current sphere's radius is equal to the objects radius of another sphere    
   public boolean equals(Object obj) {
      if (this == obj) return true;
      if (obj == null || getClass() != obj.getClass()) return false;
      Sphere s = (Sphere) obj;
      return Double.compare(s.getRadius(), getRadius()) == 0;
   }
}
